<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "http://logging.apache.org/log4j/1.2/apidocs/org/apache/log4j/xml/doc-files/log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<!--
	=====================================================================
       console appender which appends logs into standard output
   	=====================================================================
	-->
	<appender name="console" class="org.apache.log4j.ConsoleAppender">
 		<layout class="org.apache.log4j.PatternLayout">
 			<!-- <param name="ConversionPattern" value="%X{SeqId} %d %-5p [%t] (%C{2}:%L) - %m%n"/> -->
 			<param name="ConversionPattern" value="%d %-5p [%t] (%C{2}:%L) - %m%n"/>
   		</layout>
   		<!-- <filter class="org.apache.log4j.varia.StringMatchFilter"> 
       		<param name="StringToMatch" value="Result" /> 
       		<param name="AcceptOnMatch" value="false" /> 
   		</filter>      -->
 	</appender>

	<!--
	=====================================================================
       					OMS Logs Contents Type (한줄로그)
   	=====================================================================
	-->
	<appender name="oms-log" class="com.nexgrid.ips.util.RollingFileAppender">  
    	
	    
    	<param name="Directory" value="/logs/ips/oms/"/>
    	<param name="Prefix" value="IPS_API"/>
    	<param name="RollingTerms" value="5"/>
    	<param name="Append" value="true" />
    	<param name="encoding" value="UTF-8" />
    	<param name="DatePattern" value="'.'yyyyMMddHHmm"/>
    	<param name="FolderPattern" value="yyyyMMdd"/>
    	
    	<layout class="org.apache.log4j.PatternLayout">
      		<param name="ConversionPattern" value="%m%n"/>
    	</layout>
  	</appender>
    
	<!--
	=====================================================================
       					Service Logs Contents Type (디테일)
   	=====================================================================
	--> 
   <appender name="service-log" class="org.apache.log4j.DailyRollingFileAppender">
  		    
    	<param name="File" value="/logs/ips/service/service.log"/>
    	<param name="Append" value="true"/>
    	<param name="DatePattern" value="'.'yyyy-MM-dd"/>
    	<layout class="org.apache.log4j.PatternLayout">
      		<param name="ConversionPattern" value="%d %-5p - %m%n"/>
    	</layout>
    	
  	</appender>   
	
	<logger name="oms" additivity="false">
		<level value="info" />
  		<appender-ref ref="oms-log"/>
  		<appender-ref ref="console" />  
  	</logger>
  	
  	<category name="com.nexgrid.ips" additivity="false">            
		<priority value="info" />
		<appender-ref ref="service-log"/>
		<appender-ref ref="console" />
	</category>
	
	<logger name="com.nexgrid.ips.util.Init" additivity="false">
		<level value="info" />
		<appender-ref ref="service-log"/>
		<appender-ref ref="console" /> 
	</logger>
	
